layout (location = 0) in vec2 vertPos;
uniform vec2 center;
uniform vec2 size;
uniform vec2 vp;
out vec2 uv;
void main()
{
    vec2 ndc_pos = 2.*((center / vp) - vec2(.5));
    vec2 ndc_size = ( (vertPos-ndc_pos) / abs(vertPos-ndc_pos) ) * (size / vp);
    uv = (vertPos+vec2(1.,1.)) / 2.;
    gl_Position = vec4(ndc_pos+ndc_size, 0,1);
}